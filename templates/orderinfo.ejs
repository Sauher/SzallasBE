<h1>A rendelésed információi</h1>
<hr>
<h3>Kedves <%= pizza.userName %>! </h3>
<p>
    Ön az alábbi tételeket rendelte weboldalunkon
</p>



<table border="1">
    <thead>
        <tr>
            <th>#</th>
            <th>Pizza megnevezése</th>
            <th>Egységár</th>
            <th>Mennyiség</th>
            <th>Összesen</th>
        </tr>
    </thead>
    <tbody>
        <% pizzas.forEach((pizza,index) =>{
            total += pizza.price * pizza.amount
            %>

      

        <tr>
            <td><%= (index+1) %></td>
            <td><%= pizza.name %></td>
            <td><%= pizza.price %> Ft</td>
            <td><%= pizza.amount %> db</td>
            <td><%= (pizza.price * pizza.amount) %> Ft</td>
        </tr>
   <% }) %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Összesen:</td>
            <td> <%= total %> Ft</td>
        </tr>
    </tfoot>
</table>

<h5>Fizetési mód: <%= payment %></h5>
<h5>Szállítási mód: <%= shipping %></h5>
<h5>Megejgyzés: <%= comment %></h5>
<h5>Telefonszám: <%= phone %></h5>
<h5>Cím: <%= address %></h5>